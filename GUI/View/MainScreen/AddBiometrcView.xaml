<UserControl x:Class="GUI.View.MainScreen.AddBiometrcView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.View.MainScreen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <Label Content="Please insert your weight"/>
            <TextBox Text="{Binding Weight}" />
            <Label Content="Please insert your Height"/>
            <TextBox Text="{Binding Height}" />

            <Button Content="Save" Command="{Binding AddWeightommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
